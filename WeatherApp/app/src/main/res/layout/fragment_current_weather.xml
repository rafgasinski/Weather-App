<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="weather"
            type="com.example.weatherapp.model.data.WeatherData"/>
    </data>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:background="@drawable/gradient_background_day">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar.Style.NavIconAdd"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:menu="@menu/menu_current_weather"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="Warsaw" />

        </com.google.android.material.appbar.MaterialToolbar>

        <ProgressBar
            android:id="@+id/progress_bar_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleSmall"
            android:indeterminate="true"
            android:visibility="gone"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/progress_bar"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_weather"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="60dp"
                        android:contentDescription="@string/weather_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/temp"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        tools:src="@drawable/ic_clear"/>

                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="76sp"
                        android:text="@{weather.temp}"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/image_weather"
                        app:layout_constraintBottom_toBottomOf="@id/image_weather"
                        app:layout_constraintStart_toEndOf="@id/image_weather"
                        app:layout_constraintEnd_toStartOf="@id/degrees"
                        tools:text="24"/>

                    <TextView
                        android:id="@+id/degrees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/degrees_celsius"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:paddingTop="12dp"
                        android:layout_marginStart="1dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/temp"
                        app:layout_constraintStart_toEndOf="@id/temp"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/weather_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@{weather.description}"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/image_weather"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Light rain"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/forecast_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:padding="12dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/weather_description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:listitem="@layout/item_forecast"
                        tools:itemCount="5"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hourly_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/forecast_recycler_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:listitem="@layout/item_hourly"
                        tools:itemCount="4"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/current_weather_card"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="invisible"
                        android:padding="16dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/accent_transparent"
                        app:layout_constraintTop_toBottomOf="@id/hourly_recycler_view"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:visibility="visible">

                        <me.bastanfar.semicirclearcprogressbar.SemiCircleArcProgressBar
                            android:id="@+id/sun_progress"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            app:percent="@{weather.sunProgress}"
                            app:progressBarColor="@color/white"
                            app:progressPlaceHolderColor="@color/secondary"
                            app:progressBarWidth="5"
                            app:progressPlaceHolderWidth="3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:percent="70"/>

                        <TextView
                            android:id="@+id/sunrise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="20dp"
                            android:text="@{weather.sunrise}"
                            android:textColor="@color/text"
                            android:textSize="12sp"
                            android:drawablePadding="8dp"
                            app:drawableEndCompat="@drawable/ic_sunrise"
                            app:layout_constraintTop_toBottomOf="@id/sun_progress"
                            app:layout_constraintStart_toStartOf="@id/sun_progress"
                            tools:text="04:41"/>

                        <TextView
                            android:id="@+id/sunset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="20dp"
                            android:text="@{weather.sunset}"
                            android:textColor="@color/text"
                            android:textSize="12sp"
                            android:drawablePadding="8dp"
                            app:drawableEndCompat="@drawable/ic_sunset"
                            app:layout_constraintTop_toBottomOf="@id/sun_progress"
                            app:layout_constraintEnd_toEndOf="@id/sun_progress"
                            tools:text="20:58"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:alignmentMode="alignMargins"
                            android:columnCount="2"
                            android:columnOrderPreserved="false"
                            android:rowCount="2"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/sunset"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <!-- Row 1 -->
                            <!-- Column 1 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginStart="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/feels_like"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/feels_like"
                                    android:textAlignment="center"
                                    android:textColor="@color/text"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/feels_like_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="@{@string/decimal_val_degrees(weather.feelsLike)}"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="29.1Â°C"/>

                                <TextView
                                    android:id="@+id/clouds"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/cloudiness"
                                    android:textAlignment="center"
                                    android:textColor="@color/text"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/clouds_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="@{@string/decimal_val_percent(weather.clouds)}"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="14%"/>

                                <TextView
                                    android:id="@+id/wind_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/wind"
                                    android:textAlignment="center"
                                    android:textColor="@color/text"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/wind_speed_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="@{@string/decimal_val_kmh(weather.windSpeed)}"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="13 km/h"/>

                            </LinearLayout>

                            <!-- Column 2 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginStart="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/humidity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/humidity"
                                    android:textAlignment="center"
                                    android:textColor="@color/text"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/humidity_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="@{@string/decimal_val_percent(weather.humidity)}"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="38%"/>

                                <TextView
                                    android:id="@+id/pressure"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/pressure"
                                    android:textAlignment="center"
                                    android:textColor="@color/text"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/pressure_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="@{@string/decimal_val_hPa(weather.pressure)}"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="1011hPa"/>

                                <TextView
                                    android:id="@+id/uv_index"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/uv_index"
                                    android:textAlignment="center"
                                    android:textColor="@color/text"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/uv_index_val"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="@{weather.uvIndex}"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:text="8"/>

                            </LinearLayout>

                        </GridLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="24sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/refresh_button"
            android:layout_width="120dp"
            android:layout_height="56dp"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/accent"
            android:layout_below="@id/error"
            android:layout_marginTop="12dp"
            android:layout_centerInParent="true"
            android:text="@string/retry"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"/>

    </RelativeLayout>

</layout>