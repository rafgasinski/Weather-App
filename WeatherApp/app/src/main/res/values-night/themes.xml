<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/delete_background_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/accent_background_dark</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <!-- Status and Navigation bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="searchViewStyle">@style/CustomSearchView</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionModeStyle">@style/CustomActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="snackbarStyle">@style/CustomSnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/CustomSnackbarText</item>
    </style>
</resources>