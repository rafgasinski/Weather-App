<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/accent_blue" />

            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <size
                android:height="24dp"
                android:width="24dp" />
        </shape>

    </item>

    <item
        android:drawable="@drawable/ic_check"
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp"/>

</layer-list>
