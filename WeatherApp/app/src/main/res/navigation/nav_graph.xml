<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_file"
    app:startDestination="@id/currentWeather" >

    <fragment
        android:id="@+id/currentWeather"
        android:name="com.example.weatherapp.view.CurrentWeather"
        android:label="fragment_current_weather"
        tools:layout="@layout/fragment_current_weather" >
        <action
            android:id="@+id/action_currentWeather_to_locationsList"
            app:destination="@id/locationsList"
            app:popUpTo="@+id/locationsList"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/locationsList"
        android:name="com.example.weatherapp.view.LocationsList"
        android:label="fragment_locations_list"
        tools:layout="@layout/fragment_locations_list" >
        <action
            android:id="@+id/action_locationsList_to_currentWeather"
            app:destination="@id/currentWeather"
            app:popUpTo="@+id/currentWeather"
            app:popUpToInclusive="true"/>
    </fragment>

</navigation>